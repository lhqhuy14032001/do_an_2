<!DOCTYPE html>
<html>
<%- include('components/headTag.ejs'); -%>
<style>
    .checkout-total {
        max-height: 200px;
        overflow: scroll;
    }

    label.error {
        padding: 5px 0;
        min-width: 100%;
        color: red;
        display: block;
    }
</style>
<body>
<div class="page-holder">
    <!-- navbar-->
    <%- include('components/header.ejs'); -%>
    <!--  Modal -->
    <!-- -->
    <div class="container">
        <!-- HERO SECTION-->
        <section class="py-5 bg-light">
            <div class="container">
                <div class="row px-4 px-lg-5 py-lg-4 align-items-center">
                    <div class="col-lg-6">
                        <h1 class="h2 text-uppercase mb-0">Đặt hàng</h1>
                    </div>
                    <div class="col-lg-6 text-lg-end">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb justify-content-lg-end mb-0 px-0 bg-light">
                                <li class="breadcrumb-item"><a class="text-dark" href="/">Trang chủ</a></li>
                                <li class="breadcrumb-item"><a class="text-dark" href="/cart">Giỏ hàng</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Đặt hàng</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </section>
        <section class="py-5">
            <!-- BILLING ADDRESS-->
            <h2 class="h5 text-uppercase mb-4">Chi tiết thanh toán</h2>
            <div class="row">
                <div class="col-lg-8">
                    <form id="order-form" method="post">
                        <div class="row gy-3">
                            <div class="col-lg-6">
                                <label class="form-label text-sm text-uppercase" for="firstName">Tên </label>
                                <input class="form-control form-control-lg" type="text" id="firstName" name="firstName"
                                       placeholder="Nhập tên">
                            </div>
                            <div class="col-lg-6">
                                <label class="form-label text-sm text-uppercase" for="lastName">Họ </label>
                                <input class="form-control form-control-lg" type="text" id="lastName" name="lastName"
                                       placeholder="Nhập họ của bạn">
                            </div>
                            <div class="col-lg-6">
                                <label class="form-label text-sm text-uppercase" for="phone">Số điện thoại </label>
                                <input class="form-control form-control-lg" type="tel" id="phone" name="phone"
                                       placeholder="Nhập số">
                            </div>
                            <div class="col-lg-6">
                                <label class="form-label text-sm text-uppercase" for="address">Địa chỉ</label>
                                <input class="form-control form-control-lg" type="text" id="address" name="address"
                                       placeholder="Nhập địa chỉ">
                            </div>
                            <div class="col-lg-12 form-group">
                                <select id="payment-method" class="form-select">
                                    <option value="">Chọn phương thức thanh toán</option>
                                    <option value="cash">Thanh toán tại cửa hàng</option>
                                    <option value="online">Thanh toán online</option>
                                </select>
                                <select id="payment-online" class="d-none bank-code form-select ">
                                    <option value="">Chọn phương thức thanh toán online</option>
                                    <option value="VNPAYQR">Thanh toán qua ứng dụng hỗ trợ VNPAY-QR</option>
                                    <option value="VNBANK">Thanh toán qua ATM-Tài khoản ngân hàng nội địa</option>
                                    <option value="INTCARD">Thanh toán qua thẻ quốc tế</option>
                                </select>
                            </div>
                            <div class="col-lg-12 form-group">

                            </div>
                            <div class="col-lg-6 form-group">
                                <button class="btn-order btn btn-dark">Đặt hàng</button>
                                <button class="d-none btn-pay btn btn-dark">Thanh toán</button>
                            </div>

                        </div>
                    </form>
                </div>
                <!-- ORDER SUMMARY-->
                <div class="col-lg-4">
                    <div class="card border-0 rounded-0 p-lg-4 bg-light">
                        <div class="card-body">
                            <h5 class="text-uppercase mb-4">Đơn hàng của bạn</h5>
                            <ul class="checkout-total list-unstyled mb-0">

                            </ul>
                        </div>
                        <div class="d-flex align-items-center justify-content-between mt-3">
                            <strong
                                    class="text-uppercase small fw-bold"> Tổng
                                cộng: </strong>
                            <input id="bill-total" name="amount" hidden/>
                            <span class="bill-total"></span>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <!--    Footer-->
    <%- include('components/footer.ejs') -%>
    <!-- JavaScript files-->
    <%- include('components/scriptTag.ejs') -%>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.17.0/additional-methods.min.js"></script>
</div>
<script src="/js/customer/order.js"></script>
</body>
</html>